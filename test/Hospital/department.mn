# "lists";

class Department{
    Department(name, capacity, treatment) {
        this.name = name;
        this.capacity = capacity;
        this.treatment = treatment;
        this.db = List();
    }

    getName() { return this.name; }
    getCapacity() { return this.capacity; }
    getCurrentAmount() { return this.capacity - this.db.count()}
    getDB() { return this.db; }
    getTreatment() { return this.treatment; }

    addPatient(p) {
        this.db.add(p);
    }

    delPatient(p) {
        this.db.del(p);
    }

    hasPatient(p) {
        for (let i = 0; i <= this.db.count(); i++) {
            if (this.db.at(i).getID() == p.getID()) {
                // We have found it. Return true;
                return true;
            }
        }
        return false;
    }

    show() { say "[Department] Name: " + this.name + ", Capacity: " + this.capacity + ", Treatment Level: " + this.treatment; }

}